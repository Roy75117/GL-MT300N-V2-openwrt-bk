START=99
STOP=10

USE_PROCD=1

start_service() {
	mkdir -p /etc/oui-tertf/

	procd_open_instance
	procd_set_param respawn
	procd_set_param stderr 1
	procd_set_param command /usr/bin/lua /usr/bin/gl_clients_update
	procd_close_instance
}

stop_service() {
	ubus call gl-clients sync
}
